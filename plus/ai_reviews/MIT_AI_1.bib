@techreport{AIM-1571,
 author       = {Jaakkola, Tommi S. and Jordan, Michael I.},
 title        = {Computing Upper and Lower Bounds on Likelihoods in Intractable Networks},
 year         = {1996},
 institution  = {MIT Artificial Intelligence Laboratory},
